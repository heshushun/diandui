<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>demo</display-name>

	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- spring过滤乱码 -->
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	
    <!-- 配置上下文载入器,告诉它Spring配置文件的位置 ,加载bean配置-->
	<servlet>
		<servlet-name>springmvc</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<!-- 配置初始化参数：配置SpringMVC配置文件的位置和名称 -->
        <!-- 
                         实际上也可以不用contextConfigLocation来配置SpringMVC的配置文件，而使用默认
                         的配置文件为：/WEB-INF/<servlet-name>-servlet.xml
        -->
		<init-param>
		<!-- 通过在Servlet上下文中设置contextConfigLocation参数，来为上下文载入器指定一个或多个Spring配置文件 -->
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:config/spring.xml</param-value>
		</init-param>
		
		<!-- springDispatcherServlet加载的时候被创建，而不是被第一次请求时才创建 -->
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>springmvc</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
    <!--NFDFlightDataTaskListener 监听器-->
    <listener>
        <listener-class>com.diandui.TimerManager.NFDFlightDataTaskListener</listener-class>
    </listener>

	
	<!-- 上下文载入器载入除DispatcherServlet载入的配置文件之外的其它上下文配置文件 -->	
	<!-- 最常用的上下文载入器是一个Servlet监听器，其名称为ContextLoaderListener 
	    <listener> 
	         <listener-class> org.springframework.web.context.ContextLoaderListener </listener-class> 
		</listener> 
    -->
    <!-- 如果没有指定，ContextLoaderListener上下文载入器会在/WEB-INF/applicationContext.xml中找Spring配置文件 -->
</web-app>
