<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- 
    新闻记录对象 （映射配置文件  对应一个表）
-->
<hibernate-mapping>
    <class name="com.diandui.model.News" table="news">
        <id name="newsId">
            <column name="news_id" />
            <generator class="identity"></generator>
        </id>
        
        <property name="stockId" type="java.lang.String">
            <column name="stock_id" />
        </property>

        <property name="newsDate" type="java.sql.Date">
            <column name="news_date" />
        </property>
        
        <property name="newsTitle" type="java.lang.String">
            <column name="news_title" />
        </property>
        
        <property name="newsAuthor" type="java.lang.String">
            <column name="news_author" />
        </property>
        
        <property name="newsImg" type="java.lang.String">
            <column name="news_img" />
        </property>
        
        <property name="newsContent" type="java.lang.String">
            <column name="news_content" />
        </property>
                   
    </class>
</hibernate-mapping>
